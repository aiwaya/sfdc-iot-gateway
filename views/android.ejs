<script>

    var value = 0;

    function successGeolocation(pos) {
        var crd = pos.coords;
        lat = crd.latitude;
        lon = crd.longitude;
        sendDataToHeroku(lat, lon);
    }

    function errorGeolocation(err) {
        alert('Can not take geolocation value so use Tokyo location instead (' + err.code + '): ' + err.message);
        lat = 35.6798053;
        lon = 139.7646006;
        sendDataToHeroku(lat, lon);
    }

    function light(event) {
        value = event.value;
    }

    function sendDataToHeroku(lat, lon) {
        setInterval(function () {
            $.ajax({
                type: "POST",
                url: "/api/series",
                data: {
                    "value": value,
                    "uid": "<%= uid %>",
                    "created_at": moment().format(),
                    "latitude": lat,
                    "longitude": lon
                },
                success: function(j_data){
                    console.log("GET: /api/series success " +value);
                },
                error: function(XMLHttpRequest, textStatus, errorThrown) {
                    console.log("Failed : GET /api/series  " + textStatus);
                    console.log("Error: " + errorThrown);
                }
            });

        }, 5000);
    }


    $(function () {
        setTimeout(scrollTo, 100, 0, 1);
        window.addEventListener('devicelight', light);
        navigator.geolocation.getCurrentPosition(successGeolocation, errorGeolocation, {timeout: 1000});
    });


</script>
</html>